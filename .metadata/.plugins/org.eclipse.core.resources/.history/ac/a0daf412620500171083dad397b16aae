package Test0308homework;

public class Ticket {
	private int ticketNumber=5;
	
	public int getTicketNumber() {
		return ticketNumber;
	}

	public void setTicketNumber(int ticketNumber) {
		this.ticketNumber = ticketNumber;
	}
	public void buyTicket(People people){
		for (int i = 1; i < ticketNumber; i++) {
			if(ticketNumber>0){
				System.out.println(people.getName()+"买了第"+i+"张票");
				ticketNumber--;
			}else{
				System.out.println("票已卖完");
			}
		}
		
	}

}
